<UserControl x:Class="MedicalAdministrationSystem.Views.Statistics.Graphs.Pie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
        xmlns:local="clr-namespace:MedicalAdministrationSystem.Views.Statistics.Graphs">
    <Grid>
        <dxc:ChartControl BorderBrush="{x:Null}" BorderThickness="0" x:Name="PieChart" Background="{x:Null}">
            <dxc:ChartControl.Palette>
                <dxc:PastelKitPalette />
            </dxc:ChartControl.Palette>
            <dxc:ChartControl.Diagram>
                <dxc:SimpleDiagram2D>
                    <dxc:SimpleDiagram2D.Series>
                        <dxc:PieSeries2D DataSource="{Binding Data}" ArgumentDataMember="Date" ValueDataMember="Value1"
                                HoleRadiusPercent="0">
                            <dxc:PieSeries2D.Model>
                                <dxc:BorderlessFlatPie2DModel />
                            </dxc:PieSeries2D.Model>
                        </dxc:PieSeries2D>
                    </dxc:SimpleDiagram2D.Series>
                </dxc:SimpleDiagram2D>
            </dxc:ChartControl.Diagram>
        </dxc:ChartControl>
    </Grid>
</UserControl>
