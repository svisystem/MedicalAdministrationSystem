<UserControl x:Class="MedicalAdministrationSystem.Views.Statistics.Fragments.CheckButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalAdministrationSystem.Views.Statistics.Fragments">
    <Grid Height="22">
        <dxe:CheckEdit x:Name="checkEdit" Margin="0" Padding="4,0,0,0"
                EditValue="{Binding Enabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MouseUp="ClickEvent"/>
        <TextBlock x:Name="textblock" Padding="23,3,5,5" Foreground="#FF373A3D" Text="{Binding Name, Mode=OneTime}"
                IsHitTestVisible="False" />
    </Grid>
</UserControl>
